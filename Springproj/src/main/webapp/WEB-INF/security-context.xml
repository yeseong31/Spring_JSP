<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/security
                http://www.springframework.org/schema/security/spring-security.xsd
                http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="customAccessDenied" class="com.example.security.CustomAccessDeniedHandler"/>
    <bean id="customLoginSuccess" class="com.example.security.CustomLoginSuccessHandler"/>
    <bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>

    <security:http>
        <!-- 접근 제한 설정 -->
        <security:intercept-url pattern="/" access="permitAll()"/>
        <security:intercept-url pattern="/car/reserve/**/*" access="hasRole('ROLE_MEMBER')"/>
        <security:intercept-url pattern="/admin/*" access="hasRole('ROLE_ADMIN')"/>
        <security:intercept-url pattern="/admin/**/*" access="hasRole('ROLE_ADMIN')"/>
        <!-- 커스텀 로그인 -->
        <security:form-login login-page="/common/signIn" authentication-success-handler-ref="customLoginSuccess"/>
        <!-- 접근 제한 메시지 -->
        <security:access-denied-handler ref="customAccessDenied"/>
        <!-- 로그아웃 -->
        <security:logout logout-url="/common/logout" invalidate-session="true" logout-success-url="/"/>
    </security:http>

    <security:authentication-manager>
        <!-- 인증과 권한에 대한 실제 처리 -->
        <security:authentication-provider>
<!--            <security:jdbc-user-service-->
<!--                    data-source-ref="dataSource"-->
<!--                    users-by-username-query="select username, name, password, email, phone from member where username=?"-->
<!--                    authorities-by-username-query="select username, auth from member_auth where username=?"/>-->
<!--            <security:password-encoder ref="bcryptPasswordEncoder"/>-->
            <security:user-service>
                <security:user name="member" authorities="ROLE_MEMBER" password="{noop}member"/>
                <security:user name="admin" authorities="ROLE_ADMIN" password="{noop}admin"/>
            </security:user-service>
        </security:authentication-provider>
    </security:authentication-manager>

</beans>